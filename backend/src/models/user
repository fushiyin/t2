const { DataTypes } = require("sequelize");
const sequelize = require("../utils/db").sequelize;

const User = sequelize.define(
    "User",
    {
        id: {
            type: DataTypes.INTEGER,
            primaryKey: true,
            autoIncrement: true,
        },
        name: {
            type: DataTypes.STRING,
            allowNull: true,
        },
        email: {
            type: DataTypes.STRING,
            allowNull: true,
        },
        date_of_birth: {
            type: DataTypes.DATEONLY,
            allowNull: true,
        },
        username: {
            type: DataTypes.STRING,
            unique: true,
            allowNull: false,
        },
        password_hash: {
            type: DataTypes.STRING,
            allowNull: false,
        },
        role: {
            type: DataTypes.STRING,
            allowNull: false,
        },
        status: {
            type: DataTypes.STRING,
            allowNull: true,
        },
        accessToken: {
            type: DataTypes.STRING,
            allowNull: true,
        },
        latest_login: {
            type: DataTypes.DATE,
            allowNull: true,
        },
        created_at: {
            type: DataTypes.DATE,
            allowNull: false,
            defaultValue: DataTypes.NOW,
        },
    },
    {
        tableName: "users",
        timestamps: false,
    }
);
try {
    const { DailyReport } = require("./report");
    if (DailyReport) {
        User.hasMany(DailyReport, {
            foreignKey: "user_id",
            as: "DailyReports",
        });
        DailyReport.belongsTo(User, { foreignKey: "user_id", as: "User" });
    }
} catch (e) {
}
module.exports = { User };
